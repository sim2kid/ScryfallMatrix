# Matrix configuration
HOMESERVER_URL=https://matrix.org
HOMESERVER_NAME=matrix.org
# If using an access token (simple bot)
# ACCESS_TOKEN=your-access-token

# If using as an appservice
# You can generate these using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
AS_TOKEN=your-as-token
HS_TOKEN=your-hs-token
BOT_USER_ID=@scryfall:your-homeserver.com

# Scryfall API configuration
SCRYFALL_API_URL=https://api.scryfall.com
CACHE_TTL=86400
CACHE_CHECK_PERIOD=3600
CACHE_MAX_MEMORY=0
CACHE_GC_INTERVAL=300000

# Server configuration
PORT=3000

# Registration configuration
REGISTRATION_URL=http://localhost:3000

# Bot identity
BOT_ICON_URL=https://scryfall.com/icon-512.png

# Debug configuration
DEBUG_MODE=false
